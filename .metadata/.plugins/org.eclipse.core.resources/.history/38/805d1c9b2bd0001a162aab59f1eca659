package com.saiparesh.isbn;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class ValidateISBNTest {

	@Test
	void checkValidISBN() {
		ValidateISBN validatorIsbn = new ValidateISBN();
		boolean result = validatorIsbn.checkISBN("0140449116");
		assertTrue(result, "First Value");
		result = validatorIsbn.checkISBN("0140177396");
		assertTrue(result, "Second Value");
	}
	
	@Test
	void checkInvalidISBN() {
		ValidateISBN validatorIsbn = new ValidateISBN();
		boolean result = validatorIsbn.checkISBN("0140449117");
		assertFalse(result);
	}

	@Test
	public void nineDigitISBNAreNotAllowed() {
		fail();
	}
}
